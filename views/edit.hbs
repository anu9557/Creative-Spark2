<div class="container">

   <h2>Update Profile</h2>

<div class="row">
    
    <div class="col-md-2"></div>

    <div class="col-md-10">

      {{#each userdata}}

    <form class="form-horizontal" method="post" action="/updateUser/{{this.id}}">
        
        <div class="form-group">
        <label for="exampleInputFirstName" class="col-sm-2 control-lable">First Name</label>
          <div class= "col-sm-10">
            <input type="text" class="form-control" id="exampleInputFirstName" placeholder="Enter first name" name="fname" value="{{ this.fname }}" required>
          </div>
        </div>

          <div class="form-group">
            <label for="exampleInputFirstLast" class="col-sm-2 control-lable">Last Name</label>
            <div class= "col-sm-10">
              <input type="text" class="form-control" id="exampleInputLastName" placeholder="Enter last name" name="lname" value="{{ this.lname }}" required>
          </div>
          </div>
          
          <div class="form-group">
            <label for="exampleInputEmail1" class="col-sm-2 control-lable">Email</label>
            <div class= "col-sm-10">
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="email" value="{{ this.email }}" required>
            </div>
            </div>

          <div class="form-group">
                <label for="inputPassword" class="col-sm-2 control-lable">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="pass1" value="{{this.pass1}}" required>
                </div>
            </div>

         <!--   <div class="form-group">
                <label for="inputPassword2" class="col-sm-2 control-lable">Confirm Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword2" placeholder="Confirm Password" name="pass2" value="{{this.pass2}}" required>
                </div>
            </div>-->
        
    
          <div class="form-group">
            <div class = "col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success ">Update Record</button>
          </div>
        </div>
        
      </form>
        {{/each}} 

    </div>

    <div class="col-md-2"></div>
</div>


</div>